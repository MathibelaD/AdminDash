datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique  
  password       String

  firstName      String
  lastName       String
  profileImage   String?

  // Metadata
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
